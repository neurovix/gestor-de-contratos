---
import Layout from "../layouts/Layout.astro";
import NavbarIn from "../components/NavbarIn.astro";
import { Image } from "astro:assets";
import Mas from "../assets/angulo.png";
import Waiting from "../assets/espera.png";
---

<Layout>
  <main class="bg-gray-50 min-h-screen text-gray-800">
    <NavbarIn />

    <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <h1 class="font-rubik text-2xl font-bold mb-6 text-blue-800">
        Contratación de Director General de Almacén – Planta Ramos Arizpe, Coahuila
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <h2 class="text-blue-700 font-semibold text-lg">No. de contrato</h2>
          <p class="text-gray-700">CT-2025-1</p>
        </div>
        <div>
          <h2 class="text-blue-700 font-semibold text-lg">Creado por</h2>
          <p><strong>Planta de Ramos Arizpe, Coahuila.</strong> Fernando Alejandro Vazquez Medina</p>
        </div>
      </div>

      <div class="mb-8">
        <h2 class="text-blue-700 font-semibold text-lg">Creado en</h2>
        <p>YYYY/MM/DD HH:MM:SS</p>
      </div>

      <div class="mb-10">
        <h2 class="text-xl font-bold text-blue-700 mb-4">Lista de seguimiento</h2>
        
        {[1, 2, 3, 4].map((num) => (
          <div class="flex items-center justify-between bg-white shadow-sm p-4 rounded-lg mb-4 border">
            <div class="flex items-center gap-3">
              <div class="bg-green-500 text-white w-8 h-8 flex items-center justify-center rounded-full font-bold">
                {num}
              </div>
              <div>
                <p><strong>Planta:</strong> Ramos Arizpe, Coahuila</p>
                <p>Fernando Alejandro Vazquez Medina</p>
              </div>
            </div>
            <Image class="w-6" src={num === 1 ? Mas : Waiting} alt="Estatus" />
          </div>
        ))}
      </div>

      <section class="mb-10">
        <h2 class="text-xl font-bold text-blue-700 mb-4">Vista previa del contrato</h2>
        <embed
          src="/contrato.pdf#page=1"
          type="application/pdf"
          class="w-full rounded border shadow"
          style="height: 600px;"
        />
      </section>

      <section class="mb-6">
        <h2 class="text-xl font-bold text-blue-700 mb-4">Estatus de aprobación</h2>

        <div class="mb-2 text-sm text-gray-600">2 de 5 verificadores han aprobado</div>

        <div class="w-full bg-gray-300 rounded-full h-6 overflow-hidden mb-4">
          <div class="bg-blue-600 h-full text-white text-sm font-semibold text-center" style="width: 40%">
            40%
          </div>
        </div>

        <button
          class="w-full bg-green-600 hover:bg-green-700 text-white text-lg font-bold py-2 px-4 rounded transition duration-300"
        >
          APROBAR
        </button>
      </section>
    </section>
  </main>
</Layout>
