---
import NavbarIn from "../components/NavbarIn.astro";
import Layout from "../layouts/Layout.astro";
import KimberlyLogo from "../assets/logo.png";
import { Image } from "astro:assets";
---

<Layout>
  <main>
    <NavbarIn />

    <section class="px-15 py-4">
      <div class="flex flex-col gap-4">
        <input
          type="text"
          placeholder="Nombre del trámite"
          class="p-2 border border-gray-300 rounded-md"
        />

        <label
          for="pdf-upload"
          class="flex flex-col items-center justify-center border-4 border-dashed border-gray-400 rounded-xl h-48 cursor-pointer text-center hover:border-gray-600 transition-colors"
        >
          <span class="text-lg font-semibold text-gray-700 mb-2">
            Arrastra tu archivo aquí
          </span>
          <span class="text-sm text-gray-500">
            o haz clic para seleccionar un archivo PDF
          </span>
          <input
            id="pdf-upload"
            type="file"
            accept="application/pdf"
            class="hidden"
          />
        </label>
        <h1 class="text-xl font-bold font-rubik">Agregar verificadores</h1>
        <div class="flex flex-row items-center justify-between w-full">
          <div
            class="flex flex-col md:flex-row items-start md:items-center gap-2"
          >
            <p
              class="bg-green-400 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full text-sm"
            >
              1
            </p>
            <p><strong>Planta: </strong>Ramos Arizpe, Coahuila.</p>
            <p>Fernando Alejandro Vazquez Medina</p>
          </div>

          <button
            class="bg-red-600 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full hover:bg-red-700 transition"
          >
            -
          </button>
        </div>
        <div class="flex flex-row items-center justify-between w-full">
          <div
            class="flex flex-col md:flex-row items-start md:items-center gap-2"
          >
            <p
              class="bg-green-400 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full text-sm"
            >
              2
            </p>
            <p><strong>Planta: </strong>Ramos Arizpe, Coahuila.</p>
            <p>Fernando Alejandro Vazquez Medina</p>
          </div>

          <button
            class="bg-red-600 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full hover:bg-red-700 transition"
          >
            -
          </button>
        </div>
        <div class="flex flex-row items-center justify-between w-full">
          <div
            class="flex flex-col md:flex-row items-start md:items-center gap-2"
          >
            <p
              class="bg-green-400 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full text-sm"
            >
              3
            </p>
            <p><strong>Planta: </strong>Ramos Arizpe, Coahuila.</p>
            <p>Fernando Alejandro Vazquez Medina</p>
          </div>

          <button
            class="bg-red-600 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full hover:bg-red-700 transition"
          >
            -
          </button>
        </div>
        <div class="flex flex-row items-center justify-between w-full">
          <div
            class="flex flex-col md:flex-row items-start md:items-center gap-2"
          >
            <p
              class="bg-green-400 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full text-sm"
            >
              4
            </p>
            <p><strong>Planta: </strong>Ramos Arizpe, Coahuila.</p>
            <p>Fernando Alejandro Vazquez Medina</p>
          </div>

          <button
            class="bg-red-600 font-bold text-white w-8 h-8 flex items-center justify-center rounded-full hover:bg-red-700 transition"
          >
            -
          </button>
        </div>
        <div class="flex justify-center items-center my-5">
          <button
            class="text-3xl font-bold w-10 h-10 bg-green-500 hover:bg-green-700 rounded-full text-white"
            id="agregar">+</button
          >
        </div>

        <!-- Modal para agregar verificador -->
        <div
          id="modal"
          class="fixed inset-0 flex items-center justify-center z-50 invisible opacity-0 transition-opacity duration-300"
        >
          <div
            class="bg-white w-full max-w-md mx-4 rounded-xl p-6 relative shadow-xl border-2 border-gray-400"
          >
            <!-- Botón para cerrar -->
            <button
              id="cerrarModal"
              class="absolute top-2 right-2 text-gray-600 hover:text-black text-2xl font-bold"
            >
              &times;
            </button>

            <Image
              class="mx-auto w-40"
              src={KimberlyLogo}
              alt="Kimberly Logo"
            />
            <h1 class="font-rubik text-center mb-4 font-bold text-3xl">
              Agregar verificador
            </h1>
            <label for="planta" class="mt-4 font-rubik font-bold text-xl">Selecciona la planta:</label>
            <select
              name="planta"
              id="planta"
              class="border-2 border-gray-400 w-full rounded-lg shadow-xl px-4 py-2 my-1"
            >
              <option value="ramos">Ramos Arizpe</option>
              <option value="cdmx">CDMX</option>
              <option value="zacatecas">Zacatecas</option>
              <option value="guerrero">Guerrero</option>
              <option value="monterrey">Monterrey</option>
            </select>
            <label for="empleado" class="mt-4 font-rubik font-bold text-xl">Selecciona el empleado:</label>
            <select
              name="empleado"
              id="empleado"
              class="border-2 border-gray-400 w-full rounded-lg shadow-xl px-4 py-2 my-1"
            >
              <option value="1">Fernando Alejandro Vazquez Medina</option>
              <option value="2">Alejandro Vazquez Cortes</option>
              <option value="3">Norma Leticia Medina Cortes</option>
              <option value="4">Mariajose Vazquez Medina</option>
              <option value="5">Antonia Cortez Luna</option>
            </select>
            <button class="bg-green-500 w-full py-2 rounded-lg text-white my-2 font-rubik hover:bg-green-700"
              >AGREGAR</button
            >
          </div>
        </div>
      </div>
    </section>

    <script>
      const btnAbrir = document.getElementById("agregar");
      const modal = document.getElementById("modal");
      const btnCerrar = document.getElementById("cerrarModal");

      btnAbrir.addEventListener("click", () => {
        modal.classList.remove("invisible", "opacity-0");
        modal.classList.add("visible", "opacity-100");
      });

      btnCerrar.addEventListener("click", () => {
        modal.classList.add("invisible", "opacity-0");
        modal.classList.remove("visible", "opacity-100");
      });
    </script>
  </main>
</Layout>
